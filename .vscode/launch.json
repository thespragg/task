{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch As Worker",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/task",
            "args": [
                "--worker",
                "--folder",
                ".vault"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "cargo build"
        },
        {
            "name": "Launch as task",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/task",
            "env": {
                "VAULT_FOLDER": ".vault"
            },
            "args": [
                "This is a task #work"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "cargo build"
        }
    ]
}